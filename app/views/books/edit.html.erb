<h1>Editing Book</h1>
<%= form_with model:@book, url:"/list/#{@book.id}", local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Uodate Book' %>
 <% end %>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", new_book_path %>