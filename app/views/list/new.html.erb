<h1>Books</h1>
<% @book.each do |book| %>
 <indexes>
  <div class="title" ><p>Title</p>
   <span><%= link_to book.title, list_path(book.id) %></span>
  </div>

  <div class="body" ><p>Body</p>
   <span><%= link_to book.body, list_path(book.id) %></span>
  </div>
<% end %>
  <links>
   <a class="show" href="/book">Show</a>
   <a class="edit" href="/book">Edit</a>
   <a class="destroy" href="/book">Destroy</a>
　</links>
 </indexes>

 <h1>new book</h1>
 <!-- form_with部分 -->
 <%= form_with model: @book, url:'/list', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit "create Book" %>
 <% end %>